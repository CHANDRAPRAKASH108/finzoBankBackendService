<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="FileTabCharacter"/>
    <module name="Indentation">
        <property name="basicOffset" value="4"/> <!-- Number of spaces for each indent level -->
        <property name="braceAdjustment" value="0"/> <!-- Adjust the indentation level for braces -->
    </module>
    <module name="JavadocStyle">
        <property name="allowMissingPropertyJavadoc" value="false"/> <!-- Whether to allow missing Javadoc for properties -->
        <property name="allowMissingParamTags" value="false"/> <!-- Whether to allow missing @param tags -->
        <property name="allowMissingThrowsTags" value="false"/> <!-- Whether to allow missing @throws tags -->
    </module>
    <module name="MethodName">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/> <!-- Regular expression for method names -->
        <property name="allowOverrides" value="true"/> <!-- Whether to allow method name overrides -->
    </module>
    <module name="NoWhitespaceAfter">
        <property name="tokens" value="LITERAL_NEW, DOT, COMMA"/> <!-- Tokens to check for whitespace after -->
    </module>
</module>
